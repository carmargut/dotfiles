[github] # Useful for other git tools
	user = carmargut
[credential] # Helps managing credentials on macOS systems using keychain
	helper = osxkeychain

[alias] # Define shortcut commands
	loq  = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative

[branch] # This ensures that my local commits remain on top of the commit history when pulling, providing a more linear history
	autosetuprebase = always

[commit] # Each commit I make should be signed with a GPG (GNU Privacy Guard) key
	gpgSign = true


[color] # Color stuff
	ui = auto
[color "status"]
	added     = green
	changed   = green
	untracked = cyan
	branch = bold yellow
	unmerged = bold red
[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = cyan




